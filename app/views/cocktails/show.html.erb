<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <tbody>
            <ul> <% @cocktail.doses.each do |dose| %>
              <li><%= dose.ingredient.name%> (<%= dose.description %>) <%= link_to "🗑️", dose_path(dose), method: :delete, data:{ confirm: " Are you sure ?"} %>
              </li>
              <% end %>
            </ul>
          </tr>
        </tbody>
      </table>

      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %> |
      <%= link_to "See all cocktails", cocktails_path %>
    </div>
  </div>
</div>



